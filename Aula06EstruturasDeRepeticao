public class Aula06EstruturasDeRepeticao01{
  public static void main(String[] args) {
    // While, Do While, For
    int count = 0;
    while (count < 10) {
      System.out.println(count); // Or: System.out.println(++count) [Excluindo o metodo abaixo]
      count = count + 1; // Or: count++ | cout += 1
    }
    count = 0;
    do {
      System.out.println("Dentro do Do-While"+count); // Or: System.out.println("Dentro do Do-While"+ ++count);
      count++;
      } while (count < 10); // Trocar o valor por 12 do count

// Se tiver apenas uma instrução é possivel retirar as chaves "{ }" em todos: while, do while e for
// while e do while - trabalha com condições (passar por varios componentes) | for - utilizado pra contagem

    for (int i=0 ; i < 10; i++) { // Variavel local tem que ser iniciada
      System.ou.println("For "+i);
      }
  }
}

// Ctrl [+] F2 -> Para o programa

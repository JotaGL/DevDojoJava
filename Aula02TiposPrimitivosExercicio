package academy.devdojo.maratonajava.introducao;
/*
Prática
Crie variáveis para os campos descritos abaixo entre <> e imprima a seguinte mensagem:
Eu <nome>, morando no endereço <endereço>, confirmo que recebi o salário de <salario>, na data <data>
 */
public class Aula03TiposPrimitivosExercicio {
    public static void main(String[] args) {
        String nome = "João";
        String endereço = "Est. Bandeirantes 16243";
        double salario = 2000.57;
        String dataRecebimentoSalario = "21/01/2024";
        String relatorio = "Eu "+nome+" morando no endereço "+endereço+", confirmo que recebi o salário de "+salario+", na data "+dataRecebimentoSalario;

        System.out.println("Eu "+nome+" morando no endereço "+endereço+", confirmo que recebi o salário de "+salario+", na data "+dataRecebimentoSalario);
        System.out.println(relatorio);
    }
}
